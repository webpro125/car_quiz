<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <%= image_tag 'logo.png', class: 'img-responsive margin-bottom-10', style: 'display: inline-block;' %>
        <%= image_tag 'reg-banner.png', class: 'img-responsive', style: 'display: inline-block;' %>
      </div>
      <h2 class="text-center">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render 'layouts/flash' %>
          <div class="form-inputs">
            <%= f.input :email, required: false, label: false, autofocus: true, placeholder: 'Email' %>
            <%= f.input :password, label: false, required: false, placeholder: 'Password' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn-u btn-u-primary'%>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
    </div>
  </div>
</div>